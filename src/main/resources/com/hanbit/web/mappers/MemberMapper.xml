<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanbit.web.mappers.MemberMapper">
	<select id="list" resultType="com.hanbit.web.domains.MemberDTO">
		select * from member
	</select>
	<select id="findOne" parameterType="com.hanbit.web.domains.Command" resultType="com.hanbit.web.domains.MemberDTO">
		select mem_id as id,
               pw as pw,
               name as name,
               gender as gender,
               reg_date as regDate,
               ssn as ssn,
               email as email,
               profile_img as profileImg,
               phone as phone
	   from    member where ${option} = #{keyword}
	</select>
	<select id="count" resultType="int">
		select count(*) count from member 
	</select>
	<select id="existId" parameterType="com.hanbit.web.domains.MemberDTO" resultType="int">
		select count(*) from member where mem_id = #{id}
	</select>
	<insert id="insert" parameterType="com.hanbit.web.domains.MemberDTO">
		insert into member(id,pw,name,ssn,email,phone)
		values(#{id},#{pw},#{name},#{ssn},#{email},#{phone})
	</insert>
</mapper>
